@model SpedizioniEPICODE_MVC.Models.Shipments

@{
    ViewBag.Title = "Create";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="shadow-lg p-5 rounded-2 bg-dark">
        <h2 class="fw-lighter text-warning text-center">AGGIUNGI NUOVA SPEDIZIONE</h2>

        @using (Html.BeginForm("Create", "Shipment", FormMethod.Post, new { data_val = "true" }))
        {
            @Html.HiddenFor(model => model.NumeroIdentificativo)

            <div class="row p-1">
                @Html.ValidationMessageFor(model => model.DataSpedizione, "", new { @class = "text-white" })

                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.DataSpedizione, new { @class = "text-warning" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.DataSpedizione, new { type = "date", @class = "form-control border border-0" })
                    </div>
                </div>
            </div>

            <div class="row p-1">
                @Html.ValidationMessageFor(model => model.Peso, "", new { @class = "text-white" })
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="text-warning">Peso (in kg)</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Peso, new { @class = "form-control border border-0" })
                    </div>
                </div>
            </div>

            <div class="row p-1">
                @Html.ValidationMessageFor(model => model.CittaDestinataria, "", new { @class = "text-white" })

                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.CittaDestinataria, new { @class = "text-warning" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.CittaDestinataria, new { @class = "form-control border border-0" })
                    </div>
                </div>
            </div>

            <div class="row p-1">
                @Html.ValidationMessageFor(model => model.IndirizzoDestinatario, "", new { @class = "text-white" })

                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.IndirizzoDestinatario, new { @class = "text-warning" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.IndirizzoDestinatario, new { @class = "form-control border border-0" })
                    </div>
                </div>
            </div>

            <div class="row p-1">
                @Html.ValidationMessageFor(model => model.NominativoDestinatario, "", new { @class = "text-white" })

                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.NominativoDestinatario, new { @class = "text-warning" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.NominativoDestinatario, new { @class = "form-control border border-0" })
                    </div>
                </div>
            </div>

            <div class="row p-1">
                @Html.ValidationMessageFor(model => model.CostoSpedizione, "", new { @class = "text-white" })

                <div class="col-md-6">
                    <div class="form-group">
                        <label class="text-warning">Costo spedizione (€)</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.CostoSpedizione, new { @class = "form-control border border-0" })
                    </div>
                </div>
            </div>

            <div class="row p-1">
                @Html.ValidationMessageFor(model => model.DataConsegnaPrevista, "", new { @class = "text-white" })

                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.DataConsegnaPrevista, new { @class = "text-warning" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.DataConsegnaPrevista, new { type = "date", @class = "form-control border border-0" })
                    </div>
                </div>
            </div>

            <div class="row p-1">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="text-warning">Stato spedizione</label>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @foreach (var status in new List<string> { "In elaborazione", "In transito", "Spedito", "Consegnato", "Ritirato", "Rifiutato" })
                        {
                            <div class="form-check">
                                <input type="radio" asp-for="StatoSpedizione" class="form-check-input" value="@status" name="statoSpedizione" id="status-@status" />
                                <label class="form-check-label text-warning" for="status-@status">@status</label>
                            </div>
                        }
                        @Html.ValidationMessageFor(model => model.StatoSpedizione, "", new { @class = "text-white" })
                    </div>
                </div>
            </div>


            <div class="row p-1">
                @Html.ValidationMessageFor(model => model.LuogoAttuale, "", new { @class = "text-white" })

                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.LuogoAttuale, new { @class = "text-warning" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.LuogoAttuale, new { @class = "form-control border border-0" })
                    </div>
                </div>
            </div>

            <div class="row p-1">
                @Html.ValidationMessageFor(model => model.DescrizioneAggiornamento, "", new { @class = "text-white" })

                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.DescrizioneAggiornamento, new { @class = "text-warning" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.DescrizioneAggiornamento, new { @class = "form-control border border-0" })
                    </div>
                </div>
            </div>

            <div class="row p-1">
                @Html.ValidationMessageFor(model => model.DataOraAggiornamento, "", new { @class = "text-white" })

                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.DataOraAggiornamento, new { @class = "text-warning" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.DataOraAggiornamento, new { type = "date", @class = "form-control border border-0" })
                    </div>
                </div>
            </div>

            <div class="row p-1">
                @Html.ValidationMessageFor(model => model.ClienteID, "", new { @class = "text-white" })
                <div class="col-md-6">

                    <div class="form-group">

                        @Html.LabelFor(model => model.ClienteID, new { @class = "text-warning" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.ClienteID, new { @class = "form-control border border-0" })
                    </div>
                </div>
            </div>
            <br />
            <div class="d-flex justify-content-center">
                <input type="submit" value="Aggiungi spedizione" class="btn btn-warning align-self-center w-100" />
            </div>
        }
    </div>
</div>