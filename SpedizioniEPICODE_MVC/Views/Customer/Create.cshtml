@model SpedizioniEPICODE_MVC.Models.Customers

@{
    ViewBag.Title = "Create";
}

<div class="d-flex justify-content-center align-items-center">
    <div class="shadow-lg p-5 rounded-2 bg-warning">
        <h2 class="fw-lighter text-dark text-center">AGGIUNGI NUOVO CLIENTE</h2>

        @using (Html.BeginForm("Create", "Customer", FormMethod.Post, new {data_val = "true" }))
        {
            <div class="row p-1">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.ValidationMessageFor(model => model.Nome)
                        @Html.LabelFor(model => model.Nome, new { @class = "text-dark" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Nome, new { @class = "form-control border border-0" })
                    </div>
                </div>
            </div>

            <div class="row p-1">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.ValidationMessageFor(model => model.Cognome)
                        @Html.LabelFor(model => model.Cognome, new { @class = "text-dark" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Cognome, new { @class = "form-control border border-0" })
                    </div>
                </div>
            </div>

            <div class="row p-1">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.ValidationMessageFor(model => model.IsAzienda)
                        @Html.LabelFor(model => model.IsAzienda, new { @class = "text-dark" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="text-dark">
                            @Html.RadioButtonFor(model => model.IsAzienda, true, new { @class = "customer-type" }) Azienda
                        </label>
                        <label class="text-dark">
                            @Html.RadioButtonFor(model => model.IsAzienda, false, new { @class = "customer-type" }) Privato
                        </label>
                    </div>
                </div>
            </div>

            <div class="row p-1 partita-iva" style="display:none;">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.ValidationMessageFor(model => model.PartitaIva)
                        @Html.LabelFor(model => model.PartitaIva, new { @class = "text-dark" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.PartitaIva, new { @class = "form-control border border-0" })
                    </div>
                </div>
            </div>

            <div class="row p-1 cf" style="display:none;">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.ValidationMessageFor(model => model.CF)
                        @Html.LabelFor(model => model.CF, new { @class = "text-dark" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.CF, new { @class = "form-control border border-0" })
                    </div>
                </div>
            </div>

            @Html.HiddenFor(model => model.IsAzienda)
            <br />
    <div class="d-flex justify-content-center">
        <input type="submit" value="Aggiungi cliente" class="btn btn-dark align-self-center w-100" />
    </div>
        }
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {

            $(".customer-type").change(function () {
                if ($(this).val() === "True") {
                    $(".cf").hide();
                    $(".partita-iva").show();
                } else {
                    $(".partita-iva").hide();
                    $(".cf").show();
                }
            });

            $(".customer-type:checked").change();
        });
    </script>
    }